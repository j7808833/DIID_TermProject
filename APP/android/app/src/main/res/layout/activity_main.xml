<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 標題 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智能羽毛球拍 IMU 接收器"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 連接狀態 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="狀態: 未連接"
        android:textSize="16sp"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 掃描/連接按鈕 -->
    <Button
        android:id="@+id/scanButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="掃描並連接"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 斷開連接按鈕 -->
    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="斷開連接"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/scanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 零點校正按鈕 -->
    <Button
        android:id="@+id/calibrateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="零點校正"
        app:layout_constraintTop_toBottomOf="@id/disconnectButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 錄製按鈕 -->
    <Button
        android:id="@+id/recordButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="開始錄製"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/calibrateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 校正狀態/進度 -->
    <TextView
        android:id="@+id/calibrationStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#FF9800"
        app:layout_constraintTop_toBottomOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- 錄製狀態 -->
    <TextView
        android:id="@+id/recordingStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/calibrationStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- 資料計數 -->
    <TextView
        android:id="@+id/dataCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接收資料數: 0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/recordingStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 分隔線 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/dataCountText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 資料顯示區域（可滾動） -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 時間戳記 -->
            <TextView
                android:id="@+id/timestampText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="時間戳記: --"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 加速度 -->
            <TextView
                android:id="@+id/accelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 (g):\nX: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 角速度 -->
            <TextView
                android:id="@+id/gyroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 (dps):\nX: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 電壓 -->
            <TextView
                android:id="@+id/voltageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="電壓: -- V"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- 最新資料（完整資訊） -->
            <TextView
                android:id="@+id/latestDataText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最新資料:\n--"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <!-- 圖表區域標題 -->
            <TextView
                android:id="@+id/chartTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="即時曲線圖（最近 5 秒）"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- 加速度 X 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 X 軸 (g)"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelXChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 加速度 Y 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 Y 軸 (g)"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelYChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 加速度 Z 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度 Z 軸 (g)"
                android:textSize="12sp"
                android:textColor="#9C27B0"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelZChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 角速度 X 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 X 軸 (dps)"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyroXChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 角速度 Y 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 Y 軸 (dps)"
                android:textSize="12sp"
                android:textColor="#F44336"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyroYChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <!-- 角速度 Z 軸圖表 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="角速度 Z 軸 (dps)"
                android:textSize="12sp"
                android:textColor="#00BCD4"
                android:layout_marginBottom="4dp" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyroZChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
